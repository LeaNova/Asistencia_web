extends ../layout

block content
  div.mt-4.w-75.mx-auto
    if lista
      table.table.table-hover
        thead.table-info
          tr 
            th
              | Codigo
            th
              | Fecha
            th
        tbody 
          each item in lista
            tr
              td
                =item.codIngreso
              td
                =item.fecha
              td
                a(href=`/asistencia/list/${item.codIngreso}`) Ver
    div.text-center
      a(class="btn btn-primary mx-2" href="/asistencia/qr/create" role="button") Nuevo código
      a(class="btn btn-primary mx-2" href="/asistencia/qr" role="button" target="blank") Ver último